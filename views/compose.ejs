<%- include("partials/header"); -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
    <div class="form-group">
        <label>Title</label>
        <input name="postTitle" type="text" class="form-control" autocomplete="off">
    </div>
    <div class="form-group">
        <label>Post</label>
        <textarea name="postBody" class="form-control" rows="5" autocomplete="off"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>


<%- include("partials/footer"); -%>